@model MovieViewModel

<h1>Movies</h1>
<a asp-action="Create" class="btn-primary">Create</a>

<form method="get">
    <div class="d-flex flex-row align-items-center">
        <div class="mb-3">
            <label asp-for="movieFilters.Title">Search</label>
            <input asp-for="movieFilters.Title" placeholder="Title" class="form-control" />
        </div>
        <div class="d-flex flex-row">
            <div class="mb-3">
                <label asp-for="movieFilters.From">From Release Date</label>
                <input asp-for="movieFilters.From" placeholder="From" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="movieFilters.To">To Release Date</label>
                <input asp-for="movieFilters.To" placeholder="To" class="form-control" />
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="movieFilters.Gender">Gender</label>
            <input asp-for="movieFilters.Gender" placeholder="Gender" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="movieFilters.Rating">Rating</label>
            <input asp-for="movieFilters.Rating" placeholder="Rating" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="movieFilters.ActorID">Actor</label>
            <select asp-for="movieFilters.ActorID" class="form-control">
                <option value="0">Select</option>
                @foreach (var actor in Model.actors)
                {
                    <option value="@actor.ID">@actor.Name</option>
                }
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-secondary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Release Date</th>
        <th>Price</th>
        <th>Gender</th>
        <th>Rating</th>
        <th>Actors</th>
    </tr>
    @foreach(var movie in Model.movies)
    {
        <tr>
            <td>@movie.ID</td>
            <td>@movie.Title</td>
            <td>@movie.ReleaseDate.ToShortDateString()</td>
            <td>@movie.Price</td>
            <td>@movie.Gender</td>
            <td>@movie.Rating</td>
            <td>@movie.Actors.Count</td>
            <td><a asp-action="Update" asp-route-id=@movie.ID class="btn-primary">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id=@movie.ID class="btn-primary">Delete</a></td>
        </tr>
    }
</table>
@model Actor

<h1>Update</h1>

<form method="post" asp-action="Update">
    <div class="form-group">
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BirthDate">Date of birth</label>
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OscarWon">Oscars won</label>
            <input asp-for="OscarWon" class="form-control" />
            <span asp-validation-for="OscarWon" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        @if (ViewData["Response"] != null)
        {
            <div class="mb-3">
                <div class="alert alert-success">
                    @ViewData["Response"]
                </div>
            </div>
        }
        else
        {
            <div class="mb-3">
                <div class="alert alert-warning">
                    @ViewData["Error"]
                </div>
            </div>
        }
    </div>
</form>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@model ActorViewModel

<h1>Actors</h1>
<a asp-action="Create" class="btn-primary">Create</a>

<form method="get" >
<div class="d-flex flex-row align-items-center">
    <div class="mb-3">
        <label asp-for="actorFilters.Name">Search</label>
        <input asp-for="actorFilters.Name" placeholder="Name" class="form-control" />
    </div>
    <div class="d-flex flex-row">
        <div class="mb-3">
            <label asp-for="actorFilters.From">From DOB</label>
            <input asp-for="actorFilters.From" placeholder="From" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="actorFilters.To">To DOB</label>
            <input asp-for="actorFilters.To" placeholder="To" class="form-control"/>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="actorFilters.MovieID">Movie</label>
        <select asp-for="actorFilters.MovieID" class="form-control">
            <option value="0">Select</option>
            @foreach (var movie in Model.movies)
            {
                <option value="@movie.ID">@movie.Title</option>
            }
        </select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Filter</button>
    </div>
</div>
</form>


<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>DOB</th>
        <th>Oscars</th>
    </tr>
    @if (Model != null)
    {
        @foreach (var actor in Model.actors)
        {
            <tr>
                <td>@actor.ID</td>
                <td><a asp-page="/ActorRate" asp-route-id="@actor.ID">@actor.Name</a></td>
                <td>@actor.BirthDate.ToShortDateString()</td>
                <td class="text-end">@actor.OscarWon</td>
                <td><a asp-action="Update" asp-route-id=@actor.ID class="btn-primary">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id=@actor.ID class="btn-primary">Delete</a></td>
            </tr>
        }
    }
</table>